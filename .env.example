# ============================================================================
# CHAT API CONFIGURATION (for LLM/VLM completions)
# ============================================================================
CHAT_API_BASE_URL=https://api.openai.com/v1
CHAT_API_KEY=sk-your-openai-api-key-here
CHAT_API_PROVIDER=openai
CHAT_API_MODEL=gpt-4

# ============================================================================
# EMBEDDING API CONFIGURATION (separate endpoint for embeddings)
# ============================================================================
# Base URL for embedding service (can be different from chat)
EMBEDDING_API_BASE_URL=http://localhost:11434/v1
# API Key is OPTIONAL - leave empty for local Ollama
EMBEDDING_API_KEY=
EMBEDDING_API_PROVIDER=ollama
EMBEDDING_API_MODEL=nomic-embed-text

# ============================================================================
# BACKWARD COMPATIBILITY (legacy - still supported)
# ============================================================================
# If CHAT_API_* or EMBEDDING_API_* are not set, these fallback variables are used
# OPENAI_API_KEY=sk-your-fallback-key
# OPENAI_API_BASE_URL=https://api.openai.com/v1

# ============================================================================
# OPTIONAL: PER-AGENT MODEL OVERRIDES
# ============================================================================
# These are referenced in config.yaml under api_config.agent_overrides
# Examples:
# COORDINATION_AGENT_MODEL=gpt-4-turbo
# PYTHON_EXPERT_MODEL=claude-3-sonnet
# DEVOPS_EXPERT_EMBEDDING_MODEL=all-MiniLM-L6-v2

# ============================================================================
# COMMON PROVIDER EXAMPLES
# ============================================================================
# Local Ollama for embeddings:
#   EMBEDDING_API_BASE_URL=http://localhost:11434/v1
#   EMBEDDING_API_KEY=
#   EMBEDDING_API_PROVIDER=ollama
#   EMBEDDING_API_MODEL=nomic-embed-text
#
# OpenAI embeddings:
#   EMBEDDING_API_BASE_URL=https://api.openai.com/v1
#   EMBEDDING_API_KEY=sk-your-key
#   EMBEDDING_API_PROVIDER=openai
#   EMBEDDING_API_MODEL=text-embedding-3-small
#
# Custom provider:
#   EMBEDDING_API_BASE_URL=https://custom-api.example.com
#   EMBEDDING_API_KEY=your-custom-key
#   EMBEDDING_API_PROVIDER=custom
#   EMBEDDING_API_MODEL=your-model-name
#
# Cohere:
#   EMBEDDING_API_BASE_URL=https://api.cohere.ai/v1
#   EMBEDDING_API_KEY=your-cohere-key
#   EMBEDDING_API_PROVIDER=custom  # e.g. cohere
#   EMBEDDING_API_MODEL=embed-english-v3.0

# ============================================================================
# OBSERVABILITY (logging & metrics)
# ============================================================================
# LOG_FORMAT: text (default), json, or both to emit structured and human-readable logs
LOG_FORMAT=text
# When enabled, starts the in-process /metrics endpoint using METRICS_PORT
ENABLE_METRICS=false
METRICS_PORT=9100
# Optional: override the automatically generated run identifier
# RUN_ID=local-dev

# ============================================================================
# BROWSER TOOL CONFIGURATION (web search and navigation)
# ============================================================================
# Enable/disable browser tool globally
BROWSER_TOOL_ENABLED=true

# Search provider: "tavily" (recommended), "duckduckgo" (fallback), "bing", "google", "searxng"
BROWSER_SEARCH_PROVIDER=tavily

# API key for search provider (Tavily recommended for AI use cases)
# Get free API key at: https://tavily.com (1000 requests/month free tier)
BROWSER_SEARCH_API_KEY=
# Alternative env var name (for backward compatibility)
# TAVILY_API_KEY=

# Base URL for self-hosted SearXNG (optional)
# BROWSER_SEARCH_BASE_URL=http://localhost:8888

# Fallback provider when primary fails (no API key required)
BROWSER_FALLBACK_PROVIDER=duckduckgo

# Browser automation engine: "playwright" (default), "selenium", "none" (HTTP-only)
BROWSER_ENGINE=playwright

# Run browser in headless mode (true/false)
BROWSER_HEADLESS=true

# User agent string
BROWSER_USER_AGENT=Mozilla/5.0 (multi-agent-brain/1.0)

# Timeout values (seconds)
BROWSER_SEARCH_TIMEOUT=10
BROWSER_NAVIGATION_TIMEOUT=30
BROWSER_EXTRACTION_TIMEOUT=15

# Retry configuration
BROWSER_MAX_RETRIES=3
BROWSER_RETRY_DELAY=2.0
BROWSER_RATE_LIMIT_DELAY=1.0

# Content extraction limits
BROWSER_MAX_CONTENT_LENGTH=100000
BROWSER_EXTRACT_IMAGES=false
BROWSER_EXTRACT_LINKS=true

# Optional: cache configuration
BROWSER_CACHE_ENABLED=false
BROWSER_CACHE_TTL=3600
